#vim ft=shell
alias ls="ls --color=auto"
alias ll="ls -lh"
alias l="ll -a"
alias la="ll -a"
alias grub-update="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias news="newsboat"
alias gs="git status"
alias vim="nvim"
alias vi="nvim"
alias mutt="neomutt"
alias sub="subliminal --opensubtitles $OPENSUBTITLE_USER $OPENSUBTITLE_PASSWORD --addic7ed $ADDICTED_USER $ADDICTED_PASSWORD download -l en"
alias tmux="tmux -f ~/.config/tmux/config"
alias mv="mv -v"

export TODOTXT_DEFAULT_ACTION=ls
alias tx='todo.sh -d $HOME/.config/todo/config'
alias txh='todo.sh shorthelp'

# taskwarrior
alias t="task"

# dirs
alias my="cd ~/Documents/personal/; vim"

alias ldmesg="dmesg --color=always | less -R"

# git
alias cur-branch="git branch --show-current | xclip"

# notify

# clip
alias xclip="xclip -selection clipboard"
alias b='buku --suggest'
alias rsync='rsync --info=progress2'

# yay
#
alias yay='yay --answerdiff None --answerclean All --answerupgrade None'

# docker
alias diesel-docker="docker system prune -af --volumes"

# corona
alias co-au="curl https://corona-stats.online/au"
alias co-it="curl https://corona-stats.online/it"
alias co="curl https://corona-stats.online/"


# flutter stuff
alias bundletool="java -jar $HOME/local/bundletool-all-1.0.0.jar"


alias v="vagrant"
